<h1>Novo aluno</h1>

<% if @aluno.errors.any? %>
<div id="error_explanation">
    <h2>
    <%= @aluno.errors.count %> erro(s) impedem que o aluno seja salvo:
    </h2>
    <ul>
    <% @aluno.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ul>
</div>
<% end %>

<%= form_with scope: :aluno, url: alunos_path, local: true do |form| %>
  <p>
    <%= form.label :nome %><br>
    <%= form.text_field :nome %>
  </p>
 
  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </p>

  <p>
    <%= form.submit 'Salvar novo aluno' %>
  </p>
<% end %>
